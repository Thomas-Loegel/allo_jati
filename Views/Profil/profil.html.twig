   {% if (slug == 'mdp') %}
   <form name="mdp" method="POST" action="{{baseUrl}}/Profile/Modifier/Mdp">
      <div class="form-row">
         <div class="col-md-12 mb-3">
            <label for="mdp">Changer votre Mot de Passe</label>
            <input type="text" class="form-control" name="mdp" placeholder="Nouveau mot de passe">
         </div>
      </div>
      <div class="row justify-content-center">
         <button class="btn btn-secondary" type="submit">Modifier</button>
      </div>
      <div class="row justify-content-center p-2">

         {% if (alert == 'empty') %}
         <div class="alert alert-danger" role="alert">
            <p class="mb-0">Veuillez indiqué un nouveau mot de passe!</p>
         </div>
         {% elseif (alert == 'warning') %}
         <div class="alert alert-warning" role="alert">
            <p class="mb-0">Un problème de connection est survenu! Recommencez...</p>
         </div>
         {% elseif (alert == 'good') %}
