{% extends "template.html.twig" %}

{% block body %}

<div class="container-fluid d-flex justify-content-start">
   <div class="row">
      <aside id="navlateral" class="col-12 col-md-12 p-0 pt-lg-3 pl-lg-0 bg-dark">
         <div class="text-center text-white bg-dark font-weight-bold">GESTION PROFILE</div>
         <div class="text-center text-white bg-dark font-weight-bold pt-lg-3 pl-lg-0">
            <img src="{{ avatar }}" class="img-thumbnail"><br>
            <div class="pt-lg-2 pl-lg-0">{{user}}</div>
         </div>
         <nav class="navbar navbar-expand navbar-dark bg-dark flex-md-column flex-row align-items-start">
            <div class="collapse navbar-collapse">
               <ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">
                  <li class="nav-item text-light pt-lg-2 pl-lg-0">Connexion
                     <ul>
                        <li><a class="nav-link pl-0" href="{{baseUrl}}/Profile/Modifier/Pseudo">Pseudo</a></li>
                        <li><a class="nav-link pl-0" href="{{baseUrl}}/Profile/Modifier/Avatar">Avatar</a>
                        </li>
                        {% set mdp = 'Mdp' %}
                        <li><a class="nav-link pl-0" href="{{baseUrl}}/Profile/Modifier/Mdp">Mot de passe </a>
                        </li>
                     </ul>
                  </li>
                  <li class="nav-item text-light">Messagerie
                     <ul>
                        {% set send = 'Envoyer' %}
                        <li><a class="nav-link pl-0" href="{{baseUrl}}/Profile/Envoyer">Envoyer</a>
                        </li>

                        {% set receive = 'Recevoir' %}
                        <li><a class="nav-link pl-0"
                              href="{{baseUrl}}/Profile/Modifier/Recevoir_{{receive}}">Réception</a></li>
                     </ul>
                  </li>
                  <li class="nav-item text-light">Suppresion
                     <ul>
                        {% set account = 'Compte' %}
                        <li><a class="nav-link pl-0" href="{{baseUrl}}/Profile/Supprimer/Compte">Compte</a>
                        </li>
                     </ul>
                  </li>
               </ul>
            </div>
         </nav>
      </aside>
   </div>
   {% if (slug == 'pseudo') %}
   <div class="container">
      <div class="container h-100">
         <div class="row align-items-center h-100">
            <div class="col-12">
               <div id="alerteDisplay">
                  {{ alert | striptags ('<div>') | raw }}
               </div>
               <div class="card h-100 justify-content-center">
                  <div class="text-center">
                     <img src="{{ avatar }}" class="img-thumbnail">
                     <div class="pt-lg-2 pl-lg-0">{{user}}</div>
                     <form method="POST" action="{{baseUrl}}/Profile/Change/Pseudo">
                        <div class="col-md-12 mb-3">
                           <label for="pseudo">Changez votre Pseudonyme</label>
                           <input type="text" class="form-control text-center" name="pseudo" placeholder="{{user}}">
                        </div>
                        <button class="btn btn-secondary" type="submit">Modifier</button>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   {% endif %}
   {% if (slug == 'avatar') %}
   <div class="container">
      <div class="container h-100">
         <div class="row align-items-center h-100">
            <div class="col-12">
               <div id="alerteDisplay">
                  {{ alert | striptags ('<div>') | raw }}
               </div>
               <div class="card h-100 justify-content-center">
                  <div class="text-center">
                     <img src="{{ avatar }}" class="img-thumbnail">
                     <form method="POST" enctype="multipart/form-data" action="{{baseUrl}}/Profile/Modifier/Avatar">
                        <input type="file" name="avatarUpload" id="file" class="inputfile" onchange='uploadFile(this)'>
                        <div class="inputfile-box text-center">
                           <input type="file" id="avatarUpload" class="inputfile" onchange='uploadFile(this)'>
                           <label for="file" class="justify-content-center">
                              <span>
                                 <i class="fa fa-upload btn btn-secondary" style="margin:25px;"> Avatar</i></span><br>
                              <span><br>Formats acceptés:<br>bmp, jpg, jpeg, png, gif, tiff</span><b></span><br><br>
                                 <button type="submit" class="btn btn-secondary">Modifier</button>
                                 <span id="file-name" class="file-box"></span>
                           </label>
                        </div>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   {% endif %}
   {% if (slug == 'mdp') %}
   <div class="container">
      <div class="container h-100">
         <div class="row align-items-center h-100">
            <div class="col-12">
               <div id="alerteDisplay">
                  {{ alert | striptags ('<div>') | raw }}
               </div>
               <div class="card h-100 justify-content-center">
                  <div class="text-center">
                     <img src="{{ avatar }}" class="img-thumbnail">
                     <form name="mdp" method="POST" action="{{baseUrl}}/Profile/Modifier/Mdp">
                        <label for="mdp">Changez votre Mot de Passe</label>
                        <input type="text" class="form-control text-center" name="mdp"
                           placeholder="Nouveau mot de passe">
                        <button class="btn btn-secondary" type="submit">Modifier</button>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
{% endif %}
{% if (slug == 'Envoyer') %}
<form id="envoyer" name="send" method="POST" action="{{baseUrl}}/Profile/Envoyer_{{pseudo}}">

   <div class="form-row">

      <input class="form-control" name="pseudoMessage" id="pseudoMessage" rows="1" placeholder="Envoyer a: Pseudo?"
         value="">

      <textarea class="form-control" name="title" id="tilteMessage" rows="1" placeholder="Titre" value=""></textarea>


      <textarea class="form-control" name="message" id="Message" rows="3" placeholder="Message" value=""></textarea>



      <div class="row justify-content-center">
         <button class="btn btn-secondary" type="submit">Envoyer</button>
      </div>
   </div>
</form>



<div id="test" style="border:1px solid red">
   {{ alert | striptags ('<div>') | raw }}
</div>







{% endif %}
{% if (slug == 'recevoir') %}
<h2>Messagerie</h2>

{% for mess in message %}
<div class="container">
   <div class="accordion" id="accordionExample">
      <div class="card">
         <div class="card-header" id="heading{{ loop.index }}"><span class="row justify-content-start">Expéditeur:
               {{ mess.expeditor }}</span>
            <h5 class="mb-0">

               <div class="row justify-content-center">

                  <button class="btn btn-link-secondary font-weight-bold" type="button" data-toggle="collapse"
                     data-target="#collapse{{ loop.index }}" aria-expanded="true"
                     aria-controls="collapse{{ loop.index }}">
                     <h5>{{mess.title}}</h5>
                  </button>

               </div>
            </h5>
         </div>
         <div id="collapse{{ loop.index }}" class="collapse hide" aria-labelledby="heading{{ loop.index }}"
            data-parent="#accordionExample">
            <div class="card-body">
               {{mess.message}}
            </div>
            <div class="row justify-content-center">
               <button class="btn btn-link-secondary font-weight-bold text-secondary border" type="button"
                  onclick="location.href='{{baseUrl}}/Profile/Envoyer_{{mess.expeditor}}'">
                  Répondre
               </button>
               <button class="btn btn-link-secondary font-weight-bold text-secondary border" type="button"
                  onclick="location.href='{{baseUrl}}/Profile/Message/Supprimer_{{mess.id_message}}'">
                  Supprimé
               </button>
            </div>
         </div>
      </div>
   </div>
   <script>
      $('.collapse').collapse()
   </script>
</div>
{% endfor %}
{% endif %}
{% if (slug == 'compte') %}
<form name="compte" method="POST" action="{{baseUrl}}/Profile/Supprimer/Compte_{{user}}">

   <div class="row justify-content-center">
      <button class="btn btn-secondary" type="submit">Suppression</button>
   </div>
   <div class="row justify-content-center p-2">

      {% if (alert == 'error') %}
      <div class="alert alert-danger" role="alert">
         <p class="mb-0">Un erreur est survenu!</p>
      </div>
      {% elseif (alert == 'good') %}
      <div class="alert alert-success" role="alert">
         <p class="mb-0">Votre compte viens d'être supprimé!</p>
      </div>
   </div>
</form>

{% endif %}
{% endif %}
</div>
{% endblock %}

