{% extends "template.html.twig" %}

{% block body %}
<div class="container-fluid d-flex justify-content-start">
   <div class="row">
      <aside class="col-12 col-md-12 p-0 bg-dark">
         <div class="text-center text-white bg-dark font-weight-bold">GESTION PROFILE</div>
         <div class="text-center text-white bg-dark font-weight-bold">


            <img src="{{ avatar }}" class="img-thumbnail"><br>{{user}}</div>

         <nav class="navbar navbar-expand navbar-dark bg-dark flex-md-column flex-row align-items-start">
            <div class="collapse navbar-collapse">
               <ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">

                  <li class="nav-item">Connexion
                     <ul>
                        <li><a class="nav-link pl-0" href="{{baseUrl}}/Profile/Modifier/Pseudo">Pseudo</a></li>


                        {% set avatar = 'Avatar' %}
                        <li><a class="nav-link pl-0" href="{{baseUrl}}/Profile/Modifier/Avatar">Avatar</a>
                        </li>

                        {% set mdp = 'Mdp' %}
                        <li><a class="nav-link pl-0" href="{{baseUrl}}/Profile/Modifier/Mdp_{{mdp}}">Mot de passe </a>
                        </li>
                     </ul>
                  </li>
                  <li class="nav-item">Messagerie
                     <ul>
                        {% set send = 'Envoyer' %}
                        <li><a class="nav-link pl-0" href="{{baseUrl}}/Profile/Modifier/Envoyer_{{send}}">Envoyer</a>
                        </li>

                        {% set receive = 'Recevoir' %}
                        <li><a class="nav-link pl-0"
                              href="{{baseUrl}}/Profile/Modifier/Recevoir_{{receive}}">Réception</a></li>
                     </ul>
                  </li>
                  <li class="nav-item">Suppresion
                     <ul>
                        {% set account = 'Compte' %}
                        <li><a class="nav-link pl-0" href="{{baseUrl}}/Profile/Modifier/Compte_{{account}}">Compte</a>
                        </li>
                     </ul>
                  </li>
               </ul>
            </div>
         </nav>
      </aside>
   </div>

   <div class="col justify-content-end">
      <div class="col d-flex justify-content-center pt-5 pb-5" style="border:1px solid red">

         {% if (slug == 'pseudo') %}
         <form method="POST" action="{{baseUrl}}/Profile/Change/Pseudo">
            <div class="form-row">
               <div class="col-md-12 mb-3">
                  <label for="pseudo">Changer votre Pseudonyme</label>
                  <input type="text" class="form-control" name="pseudo" placeholder="{{user}}">
               </div>
            </div>
            <div class="row justify-content-center">
               <button class="btn btn-secondary" type="submit">Modifier</button>
            </div>
            <div class="row justify-content-center p-2">
               {% if (alert == 2) %}
               <div class="alert alert-warning" role="alert">
                  Veuillez saisir un nouveau pseudo!
               </div>
               {% elseif (alert == 1) %}
               <div class="alert alert-success" role="alert">
                  Pseudo bien changé!
               </div>
               {% elseif (alert == 0) %}
               <div class="alert alert-danger" role="alert">
                  Pseudo déjà utiliser, veuillez choisir un autre!
               </div>
               {% endif %}
            </div>
         </form>
         {% endif %}


         {% if (slug == 'avatar') %}
         <div class="form-row">
            <form method="POST" enctype="multipart/form-data" action="{{baseUrl}}/Profile/Modifier/Avatar">
               <div class="col-md-12 mb-3">
                  <label for="avatarUpload">Changer votre Avatar</label>
               </div>
               <div class="col-md-12 mb-3">
                  <input type="file" name="avatarUpload" id="avatarUpload"><br>
               </div>
               <div class="row justify-content-center">
                  <button class="btn btn-secondary" type="submit">Modifier</button>
               </div>
            </form>
         </div>
         {% endif %}


         {% if (slug == 'Mdp') %}
         <form name="mdp" method="POST" action="{{baseUrl}}/Mdp">
            <div class="form-row">
               <div class="col-md-12 mb-3">
                  <label for="mdp">Changer votre Mot de Passe</label>
                  <input type="text" class="form-control" name="mdp" placeholder="Nouveau mot de passe">
               </div>
            </div>
            <div class="row justify-content-center">
               <button class="btn btn-secondary" type="submit">Modifier</button>
            </div>
         </form>
         {% endif %}



         {% if (slug == 'Envoyer') %}
         <div class="container" style="border:1px solid red">
            <form name="send" method="POST" action="{{baseUrl}}/Envoyer">
               <div class="form-row">
                  <div class="p-2 container">
                     <input class="form-control" name="sendMessage" id="pseudoMessage" rows="1"
                        placeholder="Envoyer a: Pseudo?" value=""></div>
                  <div class="p-2 container">
                     <textarea class="form-control" name="sendMessage" id="tilteMessage" rows="1" placeholder="Titre"
                        value=""></textarea>
                  </div>
                  <div class="p-2 container">
                     <textarea class="form-control" name="sendMessage" id="Message" rows="3" placeholder="Message"
                        value=""></textarea>
                  </div>
               </div>
               <div class="row justify-content-center">
                  <button class="btn btn-secondary" type="submit">Envoyer</button>
               </div>
            </form>
         </div>
         {% endif %}


         {% if (slug == 'Recevoir') %}
         <form name="receive" method="POST" action="{{baseUrl}}/Recevoir">
            <div class="form-row">
               <div class="col-md-12 mb-12">
                  <label for="receive">Reception Message</label>
                  <input type="text" class="form-control" name="receive" placeholder="">
               </div>
            </div>
            <div class="row justify-content-center">
               <button class="btn btn-secondary" type="submit">Recevoir</button>
            </div>
         </form>
         {% endif %}
      </div>









      {% if (slug == 'Compte') %}
      <form name="compte" method="POST" action="{{baseUrl}}/Compte">
         <div class="form-row">
         </div>
         <div class="row justify-content-center">
            <button class="btn btn-secondary" type="submit">Suppression</button>
         </div>
      </form>
      {% endif %}
   </div>

   {% endblock %}