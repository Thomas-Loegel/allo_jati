<!DOCTYPE html>
<html lang="fr">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <link rel='icon' href='{{baseUrl}}/assets/avatar/jatilogo.png' type='image/x-icon' />
   <title>{% block title %}Allo Jati{% endblock %}</title>

   {% block stylesheets %}
   <link rel="stylesheet" href="{{baseUrl}}/assets/css/style.css">
   <link rel="stylesheet" href="{{baseUrl}}/assets/css/bootstrap+reboot.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"></script>
   {% endblock %}

</head>

<body>
   {% block header %}

   <!-- HEADER VISITEUR  -->
   {% if status is null %}
   <header>
      <nav class="header-nav navbar navbar-expand-lg mb-0 p-0 d-flex">
         <a class="navbar-brand ml-5" href="{{baseUrl}}">
            <img src="{{baseUrl}}/assets/avatar/jatilogo.png" width="100" height="100" class="d-inline-block align-top"
               alt="">
         </a>

         <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mx-auto font-weight-bold p-0">
               <li class="nav-item active">
                  <a class="nav-link hover-menu" href="{{baseUrl}}/Films">FILMS</a>
               </li>
               <li class="nav-item active">
                  <a class="nav-link hover-menu" href="{{baseUrl}}/Artistes">ARTISTES</a>
               </li>
            </ul>
         </div>

         <div  class="form-inline my-2 my-lg-0 justify-content-end mr-3">
            <a class="" href="{{baseUrl}}/Connection">
               <i class="fas fa-sign-in-alt"></i>
            </a>
         </div>
      </nav>
   </header>

   <!-- HEADER ADMIN  -->
   {% elseif status == 1 %}
   <header>
      <nav class="header-nav navbar navbar-expand-lg mb-0 p-0 bg-dark d-flex">
         <a class="navbar-brand ml-5" href="{{baseUrl}}">
            <img src="{{baseUrl}}/assets/avatar/jatilogo.png" width="100" height="100" class="d-inline-block align-top" alt="">
         </a>
         <div class="collapse navbar-collapse " id="navbarText">
            <ul class="navbar-nav mx-auto font-weight-bold p-0">
               <li class="nav-item active">
                  <a class="nav-link hover-menu text-white" href="{{baseUrl}}/Films">FILMS</a>
               </li>
               <li class="nav-item active">
                  <a class="nav-link hover-menu text-white" href="{{baseUrl}}/Artistes">ARTISTES</a>
               </li>
               <li class="nav-item active">
                  <a class="nav-link hover-menu text-white" href="{{baseUrl}}/Admin">
                     <i class="fas fa-tools"></i>
                     Admin
                  </a>
               </li>
               <li>
                  {% if alertMessage != 0 %}
                  <div id="messages">
                     <img src="{{baseUrl}}/assets/avatar/notif.png" class="message">
                     <span class="alertMessage text-white">{{ alertMessage}}</span>
                  </div>
                  {% endif %}
               </li>
            </ul>
         </div>

         <div  class="form-inline my-2 my-lg-0 justify-content-end mr-3">
            <a class="nav-link hover-menu mr-1" href="{{baseUrl}}/Profile">
               <i class="far fa-user-circle profil-admin"></i>
            </a>
            <a class="" href="{{baseUrl}}/Deconnection">
               <i class="fas fa-sign-out-alt sign-out-admin"></i>
            </a>
         </div>
      </nav>
   </header>

   <!-- HEADER USER  -->
   {% elseif status == 2 %}
   <header>
      <nav class="header-nav navbar navbar-expand-lg mb-0 p-0 d-flex">
         <a class="navbar-brand ml-5" href="{{baseUrl}}">
            <img src="{{baseUrl}}/assets/avatar/jatilogo.png" width="100" height="100" class="d-inline-block align-top"
               alt="">
         </a>
         <div class="collapse navbar-collapse " id="navbarText">
            <ul class="navbar-nav mx-auto font-weight-bold p-0">
               <li class="nav-item active">
                  <a class="nav-link hover-menu" href="{{baseUrl}}/Films">FILMS</a>
               </li>
               <li class="nav-item active">
                  <a class="nav-link hover-menu" href="{{baseUrl}}/Artistes">ARTISTES</a>
               </li>
               <li class="nav-item active">
                  <a class="nav-link hover-menu" href="{{baseUrl}}/Suggestion">Suggestion</a>
               </li>
               <li>
                  {% if alertMessage != 0 %}
                  <div id="messages">
                     <img src="{{baseUrl}}/assets/avatar/notif.png" class="message">
                     <span class="alertMessage ">{{ alertMessage}}</span>
                  </div>
                  {% endif %}
               </li>
            </ul>

            <div  class="form-inline my-2 my-lg-0 justify-content-end mr-3">
               <a class="nav-link hover-menu mr-1" href="{{baseUrl}}/Profile">
                  <i class="far fa-user-circle"></i>
               </a>
               <a class="" href="{{baseUrl}}/Deconnection">
                  <i class="fas fa-sign-out-alt"></i>
               </a>
            </div>
         </div>
      </nav>
   </header>
   {% endif %}
   {% endblock %}

   {% block body %}
   {# Here the main content, you can create other blocks if there are useful to you #}
   {% endblock %}

   {% block footer %}
   {# Footer ici #}
   {% endblock %}

   {% block javascripts %}
      <script src="{{baseUrl}}/assets/js/app.js"></script>
      <script src="https://kit.fontawesome.com/c96e1b0251.js" crossorigin="anonymous"></script>
   {% endblock %}
</body>

</html>
