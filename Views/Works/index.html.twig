{% extends "template.html.twig" %}

{% block title %}Films{% endblock %}

{% block body %}

   <div class="d-flex justify-content-center" >
      <h1 class="text-primary pb-5">Films</h1>
   </div>
   <div class="d-flex justify-content-center flex-wrap">

   {% for works in result %} 
      <div class="d-flex flex-column m-5">
         <div class="mx-auto">
            <h3 class="text-primary "><a href="{{baseUrl}}/Films/Show/{{ works.id_works}}">{{ works.title}}</a></h3>
         </div>
         <img src="{{ works.picture}}" style="width:400px;height:500px;"></img>
      </div>
   {% endfor %}

   </div>
{% endblock %}
