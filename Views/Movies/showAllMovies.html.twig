{% extends "template.html.twig" %}

{% block title %}Films{% endblock %}

{% block body %}
   <div class="d-flex justify-content-center" >
      <h1 class="text-primary pb-5">Films</h1>
   </div>

   <div class="d-flex justify-content-center flex-wrap">
      {% for movies in movies %}
         <div class="d-flex flex-column m-5">
            <div class="mx-auto">
               <h6 class="text-primary text-center">{{movies.title}}</h6>
            </div>
            <a href="{{baseUrl}}/Films/Film_{{movies.id_movie}}">
               <img src="{{movies.picture}}">
            </a>
         </div>
      {% endfor %}
   </div>
{% endblock %}
