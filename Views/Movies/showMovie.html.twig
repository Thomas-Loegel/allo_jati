   <img src="{{movie.picture}}"></img>
   <p>{{movie.year}}</p>
   <p>{{movie.style}}</p>
   <p>{{movie.time}}</p>
   <p>{{movie.resume}}</p>

         {% if artists.role == 1 %}
            {% set role = 'Acteur' %}

            {% elseif artists.role == 2 %}
               {% set role = 'Réalisateur' %}

            {% elseif artists.role == 3 %}
               {% set role = 'Réalisateur & Acteur' %}

      {% endif %}

      <div class="d-flex flex-column m-5">     
         <h6 class="text-center">{{artists.first_name}} {{artists.last_name}}<br>{{role}}</h6>
         <a href="{{baseUrl}}/Films/Artiste_{{artists.id_artist}}"><img class="rounded img-thumbnail m-3" src="{{artists.picture}}" style="width:200px;height:300px;"></img></a> 
      </div>

