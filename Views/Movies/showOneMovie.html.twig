{% extends "template.html.twig" %}

{% block title %}Film{% endblock %}

{% block body %}

   <h2>{{movie.title}}</h2>
   <img src="{{movie.picture}}"></img>
   <p>{{movie.year}}</p>
   <p>{{movie.style}}</p>
   <p>{{movie.time}}</p>
   <p>{{movie.resume}}</p>

   {% for artist in artists %}

      {% if artist.role == 1 %}
         {% set role = 'Acteur' %}

         {% elseif artist.role == 2 %}
            {% set role = 'Réalisateur' %}
         {% elseif artist.role == 3 %}
            {% set role = 'Réalisateur & Acteur' %}

      {% endif %}

      <ul>
         <li>{{role}} : <a href="{{baseUrl}}/Films/Artiste_{{artist.id_artist}}">{{artist.first_name}} {{artist.last_name}}</a></li>
      </ul>
   {% endfor %}

{% endblock %}