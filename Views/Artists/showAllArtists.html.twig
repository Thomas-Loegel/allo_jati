{% extends "template.html.twig" %}

{% block title %}Artistes{% endblock %}

{% block body %}

   <div class="d-flex justify-content-center" >
      <h2 class="text-primary pb-5">Artistes</h2>
   </div>

   <div class="d-flex justify-content-center flex-wrap">
      {% for artists in artists %}
         <div class="d-flex flex-column m-5">
            <a href="{{baseUrl}}/Artistes/Artiste_{{artists.id_artist}}">
               <img src="{{ artists.picture }}">
            </a>

            <a href="{{baseUrl}}/Artistes/Artiste_{{artists.id_artist}}">
               <p class="text-primary text-center">{{ artists.first_name }} {{ artists.last_name }}</p>
            </a>
         </div>
      {% endfor %}
   </div>

{% endblock %}
