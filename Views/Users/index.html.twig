{% extends "template.html.twig" %}

{% block title %} {{title}} {% endblock %}

{% block body %}

<h2>Bienvenue sur la page User</h2>

{% if slug is null %}

<h2>Connectez-vous :</h2>

<div class="container">
   <div class="row">
      <form class="col-4">
         <div class="form-group">
            <label for="pseudo">Pseudo</label>
            <input type="text" class="form-control" id="pseudo" placeholder="ex : kékédu68">
         </div>
         <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password">
         </div>

         <div class="form-group">
            <a href="{{baseUrl}}/Users/register" class="badge badge-light col">Pas encore inscrit ?!</a>
            <button type="submit" class="btn btn-primary col">Se connecter</button>
         </div>

         <p class="text-center"><a href="#">Identifiant ou mot de passe oublié ?</a></p>
         
      </form>
   </div>
</div>
{% endif %}

{% if (slug == 'register') %}

<h2>Créez un compte :</h2>

<div class="container">
   <div class="row">
      <form class="col-4">
         <label for="mail">Adresse mail *</label>
         <input type="mail" class="form-control" id="mail">

         <div class="form-group">
            <label for="pseudo">Pseudo *</label>
            <input type="text" class="form-control" id="pseudo">
         </div>

         <div class="form-group">
            <label for="password">Mot de passe *</label>
            <input type="password" class="form-control" id="password">
         </div>

         <div class="form-group">
            <label for="exampleFormControlFile1">Photo de profil</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
         </div>

         <div class="form-group">
            <button type="submit" class="btn btn-primary col">S'inscrire</button>
         </div>

         <small id="requiredField" class="form-text text-muted">* champs obligatoires</small>
      </form>
   </div>
</div>

{% endif %}

{% endblock %}
