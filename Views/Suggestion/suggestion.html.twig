{% extends "template.html.twig" %}

{% block title %}Suggestion{% endblock %}

{% block body %}

<div class="container">
   <div class="row justify-content-md-center">
      <form class="col-4 users-form" method="POST" action="{{baseUrl}}/Suggestion" enctype="multipart/form-data">
         <div class="d-flex justify-content-center">
            <h2>Suggestion</h1>
         </div>

   {% if name is empty %}
         <div class="form-group my-4">
            <input type="text" class="form-control d-inline border border-danger" name="pseudo" id="validationDefault01" placeholder="Pseudo ou Nom *" value = "{{ name }}">
         </div>
   {% else %}
         <div class="form-group my-4">
            <input type="text" class="form-control d-inline" name="pseudo" id="validationDefault01" placeholder="Pseudo ou Nom *" value ="{{ name }}">
         </div>
   {% endif %}


         <div class="form-group my-4">
            <input type="file" class="form-control-file input-file" name="zip_file[]" id="exampleFormControlFile1" multiple="multiple">
         </div>

   {% if mail is empty %}
         <div class="form-group my-4">
            <input type="email" class="form-control border border-danger" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="nom@example.com *" value ="{{ mail }}">
            <small id="emailHelp" class="form-text " style="color:#FF2E63"></small>
         </div>
   {% else  %}
         <div class="form-group my-4">
            <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="nom@example.com *" value ="{{ mail }}">
            <small id="emailHelp" class="form-text " style="color:#FF2E63"></small>
         </div>         
   {% endif %}

   {% if  txtAre == "" %}
         <div class="row">
            <div class="col-md-12">
               <div class="form-group my-4">
                  <textarea class="form-control textarea border border-danger" rows="5" name="text" id="Message" placeholder="Message *"  style="resize:none">{{ txtAre }}</textarea>
               </div>
            </div>
         </div>
   {% elseif txtAre is empty %}
         <div class="row">
            <div class="col-md-12">
               <div class="form-group my-4">
                  <textarea class="form-control textarea" rows="5" name="text" id="Message" placeholder="Message *"  style="resize:none">{{ txtAre }}</textarea>
               </div>
            </div>
         </div>         
   {% endif %}



         {% if alertsEmail is empty %}
         <button type="submit" name ="submit"class="btn btn-outline jati-colors-btn col">Envoyer</button>
         {% elseif alertsEmail == 'yes' %}
         <button type="submit" name ="submit"class="btn btn-outline bg-success col text-white">Merci ! <i class="fas fa-check"></i></button>        
         {% endif %}
         

            {% if  alertsEmail is empty %}  
                  <small id="emailHelp" class="form-text text-muted mt-3">Champs obligatoires *</small>
            {% elseif alertsEmail == 'yes' %}


            {% elseif alertsEmail == 'no' %}  
               <div class="alert alert-danger mt-4 d-flex" role="alert"><span class="mx-auto font-weight-bold">
               Votre message n'a pas été transmis, veuillez réessayer</span></div>
                
            {% elseif alertsEmail == 'noText' %}
               <h4 id="emailHelp" class="form-text text-danger font-weight-bold">Champs obligatoires *</h4>
               <button type="submit" name ="submit"class="btn btn-outline jati-colors-btn col mt-3">Envoyer</button>
            {% endif %}               
      </form>
   </div>
